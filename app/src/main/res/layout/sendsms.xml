<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a3x3conect.com.mycampus365.Sendsms"
    android:background="#b0b0b0">


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        app:mtf_image="@drawable/compose"
        android:layout_marginTop="80dp"
        android:id="@+id/view">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Compose SMS"
            android:textColor="#0078d7"
            android:id="@+id/compose"
            android:textColorHint="#0078d7"
            android:textSize="16dp"
            android:minLines="3"
            android:maxLines="5"
            android:height="200dp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Receipents:"
        android:id="@+id/rec"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:id="@+id/button"
        android:layout_below="@+id/view"
        android:layout_alignRight="@+id/rec"
        android:layout_alignEnd="@+id/rec" />

</RelativeLayout>
